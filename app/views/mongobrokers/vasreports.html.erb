<fieldset>
  <legend>Reports</legend>
  <div class="row" class="span12">
    <div class="span3">
      RIM services or Shortcodes: <select id='rimservice_or_shortcode'>
        <option value="" style="display:none;"></option>
        <option name="prepaid">PREPAID RIM SERVICES</option>
        <option name="postpaid">POSTPAID RIM SERVICES</option>
        <option name="all">ALL RIM SERVICES</option>
        <option name="shortcode">SHORTCODES</option>
      </select>
    </div>
    <div id = 'bundleselect'>
      <div class="span3">
        <label for='bundles'>Select Bundle Type:</label> <select id='bundles'></select>
      </div>
      <div class="span3">
        <label for='provisioning_type'>Provisioning Type:</label> <select id='provisioning_type'></select>
      </div>
      <div class="span3">
        <label for='no_of_days'>Number of days from yesterday:</label> <input type="number" maxlength='3'class="input-mini" id='no_of_days'></input>
      </div>
      <button id='submit' class='btn'>Submit</button>
    </div>
  </div>
</fieldset>
<%= render template: 'mongobrokers/_reportjs' %>
